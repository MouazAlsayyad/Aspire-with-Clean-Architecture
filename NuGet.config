<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <packageSources>
    <clear />
    <add key="nuget.org" value="https://api.nuget.org/v3/index.json" protocolVersion="3" />
  </packageSources>
  
  <config>
    <!-- Increase timeout from default 60s to 300s (5 minutes) for large packages -->
    <add key="http.timeout" value="300000" />
    
    <!-- Limit concurrent downloads to reduce VPN strain (default is 64) -->
    <add key="maxHttpRequestsPerSource" value="4" />
    
    <!-- Accept signature validation to avoid additional network requests -->
    <add key="signatureValidationMode" value="accept" />
    
    <!-- Increase max attempts for failed downloads -->
    <add key="MaxRetryCount" value="5" />
    
    <!-- Don't lock assets file during restore (helps with parallel operations) -->
    <add key="DisableParallelProcessing" value="false" />
    
    <!-- Use global packages folder -->
    <add key="globalPackagesFolder" value="C:\Users\mouaz\.nuget\packages" />
  </config>
  
  <packageManagement>
    <!-- Skip duplicate package warnings -->
    <add key="format" value="1" />
    <add key="disabled" value="false" />
  </packageManagement>
</configuration>

